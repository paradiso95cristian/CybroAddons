<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Banner snippet -->
    <template id="fasion_banner" inherit_id="website.snippets" name="Banner Snippet">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="theme_fasion.banner_snippet"
               t-thumbnail="theme_fasion/static/src/img/snippets/index-banner-block.jpg"/>
        </xpath>
    </template>
    <template id="banner_snippet" name="Banner Snippet">
        <section class="s_carousel_wrapper banner" data-vxml="001">
            <t t-set="uniq" t-value="datetime.datetime.now().microsecond"/>
            <div t-attf-id="myCarousel{{uniq}}" class="s_carousel s_carousel_default carousel slide" data-bs-interval="10000">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li t-attf-data-bs-target="#myCarousel{{uniq}}" data-bs-slide-to="0" class="active"/>
                    <li t-attf-data-bs-target="#myCarousel{{uniq}}" data-bs-slide-to="1"/>
                    <li t-attf-data-bs-target="#myCarousel{{uniq}}" data-bs-slide-to="2"/>
                </ol>
                <!-- Content -->
                <div class="carousel-inner">
                    <!-- #01 -->
                    <div class="carousel-item active banner_bg" data-name="Slide">
                        <div>
                            <div class="banner">
                                <div class="container p-0 ">
                                    <div class="slider">
                                        <div>
                                            <div class="slider_1">
                                                <div class="row">
                                                </div>
                                                <div class="row">
                                                    <div class="col-lg-6 col-12">
                                                        <div class="banner_left">
                                                            <div class="banner_heading">
                                                                <span>T</span>rend <span>V</span>ogue
                                                                <p class="banner_sub_heading">
                                                                    <span>Shop</span>
                                                                    <span>Exclusive</span>
                                                                    <span>Clothing</span>
                                                                </p>
                                                            </div>
                                                            <h3>
                                                                <span>M</span>en's
                                                                <span>F</span>ashion
                                                            </h3>
                                                            <div class="box">
                                                                <div class="offer">
                                                                    Get Up To <span>45%</span> <span class="off">OFF</span>
                                                                </div>
                                                                <div class="special">
                                                                    on special sale
                                                                </div>
                                                                <a href="#" class="btn btn-primary">Shop Now</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-6">
                                                        <div class="banner_right">
                                                            <img src="/theme_fasion/static/src/img/Banner/slider-1.jpg"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- #02 -->
                    <div class="carousel-item banner_bg2" data-name="Slide">
                        <div>
                            <div class="banner">
                                <div class="container p-0 ">
                                    <div class="slider">
                                        <div>
                                            <div class="slider_1">
                                                <div class="row">
                                                </div>
                                                <div class="row">
                                                    <div class="col-lg-6 col-12">
                                                        <div class="banner_left">
                                                            <div class="banner_heading">
                                                                <span>T</span>rend <span>V</span>ogue
                                                                <p class="banner_sub_heading">
                                                                    <span>Shop</span>
                                                                    <span>Exclusive</span>
                                                                    <span>Clothing</span>
                                                                </p>
                                                            </div>
                                                            <h3>
                                                                <span>W</span>omen's
                                                                <span>F</span>ashion
                                                            </h3>
                                                            <div class="box">
                                                                <div class="offer">
                                                                    Get Up To <span>50%</span> <span class="off">OFF</span>
                                                                </div>
                                                                <div class="special">
                                                                    on special sale
                                                                </div>
                                                                <a href="#" class="btn btn-primary">Shop Now</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-6">
                                                        <div class="banner_right">
                                                            <img src="/theme_fasion/static/src/img/Banner/slider-2.jpg"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- #03 -->
                    <div class="carousel-item banner_bg3" data-name="Slide">
                        <div>
                            <div class="banner">
                                <div class="container p-0 ">
                                    <div class="slider">
                                        <div>
                                            <div class="slider_1">
                                                <div class="row">
                                                </div>
                                                <div class="row">
                                                    <div class="col-lg-6 col-12">
                                                        <div class="banner_left">
                                                            <div class="banner_heading">
                                                                <span>T</span>rend <span>V</span>ogue
                                                                <p class="banner_sub_heading">
                                                                    <span>Shop</span>
                                                                    <span>Exclusive</span>
                                                                    <span>Clothing</span>
                                                                </p>
                                                            </div>
                                                            <h3>
                                                                <span>K</span>id's
                                                                <span>F</span>ashion
                                                            </h3>
                                                            <div class="box">
                                                                <div class="offer">
                                                                    Get Up To <span>65%</span> <span class="off">OFF</span>
                                                                </div>
                                                                <div class="special">
                                                                    on special sale
                                                                </div>
                                                                <a href="#" class="btn btn-primary">Shop Now</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-6">
                                                        <div class="banner_right">
                                                            <img src="/theme_fasion/static/src/img/Banner/slider-3.jpg"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Controls -->
                <a class="carousel-control-prev o_not_editable" contenteditable="false" t-attf-href="#myCarousel{{uniq}}" data-bs-slide="prev" role="img" aria-label="Previous" title="Previous">
                    <span class="carousel-control-prev-icon"/>
                    <span class="visually-hidden">Previous</span>
                </a>
                <a class="carousel-control-next o_not_editable" contenteditable="false" t-attf-href="#myCarousel{{uniq}}" data-bs-slide="next" role="img" aria-label="Next" title="Next">
                    <span class="carousel-control-next-icon"/>
                    <span class="visually-hidden">Next</span>
                </a>
            </div>
        </section>
    </template>
</odoo>
